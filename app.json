{
  "expo": {
    "name": "Aura",
    "slug": "Aura",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "aura",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aura.tracker",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "bluetooth-central",
          "bluetooth-peripheral",
          "fetch",
          "processing"
        ],
        "NSBluetoothAlwaysUsageDescription": "Aura needs Bluetooth to track your devices.",
        "NSBluetoothPeripheralUsageDescription": "Aura needs Bluetooth to track your devices.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Aura needs location to map where you lost your devices.",
        "NSLocationAlwaysUsageDescription": "Aura needs location to map where you lost your devices.",
        "NSLocationWhenInUseUsageDescription": "Aura needs location to map where you lost your devices."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.aura.tracker",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE",
        "android.permission.VIBRATE",
        "android.permission.RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "central",
            "peripheral",
            "background"
          ],
          "bluetoothAlwaysPermission": "Allow Aura to scan for devices even when the app is in the background."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "playServicesLocationVersion": "21.0.1"
          },
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      "./plugins/withAndroidForegroundService"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "18393588-5ed6-41f6-a2aa-8043999e9379"
      }
    }
  }
}